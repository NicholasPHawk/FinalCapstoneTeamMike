@model List<ToolLoanRecordSearchModel>
@{
    ViewData["Title"] = "ToolLoanRecordSearchResultModel";
}

<div class="jumbotron" style="background-image: url(/images/EditTools.jpg); background-position-y: center; ">Loan Records</div>

<div class="content">
    @if (Model.Count == 0)
    {
        <p class="bold">No results found with your search parameters.</p>
    }
    else
    {
        @foreach (ToolLoanRecordSearchModel loanRecord in Model)
        {
            <div class="col-sm-4">
                <div class="thumbnail column_thumbnail">
                    <img class="tool_image" src="~/images/@(loanRecord.ImageName).jpg" alt="Tool Photo" />
                    <p><strong class="bold">Tool Number:</strong> @loanRecord.Id</p>
                    <p><strong class="bold">Brand:</strong> @loanRecord.Brand</p>
                    <p><strong class="bold">Tool:</strong> @loanRecord.ToolName</p>
                    <p><strong class="bold">Current Borrower:</strong> @loanRecord.CurrentBorrowerName</p>
                    <p><strong class="bold">License Number:</strong> @loanRecord.LicenseNumber</p>
                    <p><strong class="bold">Date Borrowed:</strong> @loanRecord.DateBorrowed.ToString("MM/dd/yyyy")</p>
                    <p><strong class="bold">Due Date:</strong> @loanRecord.DueDate.ToString("MM/dd/yyyy")</p>
                </div>
            </div>
        }
    }
</div>
