@model User
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form asp-controller="User" asp-action="Login" method="post">
    <div>
        <label asp-for="Email">Email:</label>
        <input asp-for="Email" />
    </div>
    <div>
        <label asp-for="Password">Password:</label>
        <input asp-for="Password" />
    </div>
    <button type="submit">Log In</button>
</form>