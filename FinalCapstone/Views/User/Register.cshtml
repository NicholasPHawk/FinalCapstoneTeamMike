@model NewUserViewModel
@{
    ViewData["Title"] = "RegisterUser";
}

<h2>Register</h2>

<form asp-controller="User" asp-action="Register" novalidation method="post">
    <div>
        <label asp-for="Email">Email:</label>
        <input asp-for="Email" />
        <span asp-validation-for="Email" class="dangertext"></span>
    </div>
    <div>
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" />
        <span asp-validation-for="Name" class="dangertext"></span>
    </div>
    <div>
        <label asp-for="DriversLicense">Drivers License Number:</label>
        <input asp-for="DriversLicense" />
        <span asp-validation-for="DriversLicense" class="dangertext"></span>
    </div>
    <div>
        <label asp-for="Username">Username:</label>
        <input asp-for="Username" />
        <span asp-validation-for="Username" class="dangertext"></span>
    </div>
    <div>
        <label asp-for="Password">Password:</label>
        <input asp-for="Password" />
        <span asp-validation-for="Password" class="dangertext"></span>
    </div>
    <div>
        <label asp-for="ConfirmPassword">Confirm Password:</label>
        <input asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword" class="dangertext"></span>
    </div>
    <button type="submit">Register</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}