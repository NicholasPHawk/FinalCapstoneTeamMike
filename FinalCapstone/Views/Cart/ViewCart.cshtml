@model Cart
@{
    ViewData["Title"] = "ViewCart";
}

<h2>View Cart</h2>

<div class="content">
    @foreach (CartItem item in Model.Items)
    {
        <div class="col-sm-4">
            <div class="column_thumbnail">
                <img class="tool_image" src="~/images/@(item.Tool.ImageName).jpg" alt="Tool Photo"/>
                <p><strong>Brand:</strong> @item.Tool.Brand</p>
                <p><strong>Tool:</strong> @item.Tool.ToolName</p>
                <p><strong>Borrower:</strong> @item.Tool.CurrentBorrowerName</p>
                <p><strong>Today's Date:</strong> @item.Tool.DateBorrowed.ToString("MM/dd/yyyy")</p>
                <p><strong>Due Date:</strong> @item.Tool.DueDate.ToString("MM/dd/yyyy")</p>
            </div>
        </div>
    }
</div>
